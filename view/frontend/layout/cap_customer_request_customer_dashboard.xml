<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Return Request</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Cap\CustomerRequest\Block\Customer\Dashboard" name="cap.customer.request.dashboard" template="customer/dashboard.phtml">
                <block class="Cap\CustomerRequest\Block\Customer\Dashboard" name="cap.customer.request.form" template="customer/request_form.phtml"/>
                <block class="Cap\CustomerRequest\Block\Customer\Dashboard" name="cap.customer.request.history" template="customer/request_history.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>